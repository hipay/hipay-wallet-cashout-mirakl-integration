{% extends 'layout.twig' %}

{% block content %}
    <div class="starter-template">
        <h1>Settings</h1>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-default ">
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="col-lg-12">
                        <h2>Correction des erreurs</h2>
                        <p>
                            Cliquez sur le bouton "Relancer" si vous avez une erreur d'exécution pour l'une ou plusieurs des action suivantes:
                        </p>
                    </div>
                    <div class="col-lg-12">
                        <p>
                            {{ form_widget(form.batch) }}
                        </p>
                    </div>
                    <div class="col-lg-12">
                        <p>
                            {{ form_widget(form.send) }}
                        </p>
                    </div>
                    <div class="col-lg-12">
                        <p>
                        <div class="alert alert-dismissible alert-danger" style="display:none;">
                            <strong>Error</strong> - Nous avons détecté un problème technique, si le problème persiste veuillez contacter le support HiPay support.mkp@hipay.com.
                        </div>
                        {% if success is defined  and success == true %}
                            <div class="alert alert-dismissible alert-success">
                                <strong>Succès !</strong> Relance terminée.
                            </div>
                        {%endif%}
                        </p>
                    </div>
                    {{ form_end(form) }}

                    <h4>Listes des batchs</h4>
                    <table class="table table-striped table-hover " id="table_batchs">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Action</th>
                                <th>Etat</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}