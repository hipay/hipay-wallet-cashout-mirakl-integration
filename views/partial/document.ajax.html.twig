
<h4>{{'vendor'|trans}} (Mirakl ID: {{vendor.miraklId}} / HiPay ID: {{vendor.hipayId}})</h4>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>{{'document.type'|trans}}</th>
            <th>{{'state'|trans}}</th>
            <th>{{'decline.reason'|trans}}</th>
        </tr>
    </thead>
    <tbody>
        {% for document in documents %}
            <tr>
                <td>
                    {{document.label}}
                </td>
                <td class="{%if document.status_code == 1 %}info {% elseif document.status_code == 2 %}success{%endif%}">
                    {{document.status_label}}
                </td>
                <td>
                    -
                </td>
            </tr>
        {%endfor%}
    </tbody>
</table>