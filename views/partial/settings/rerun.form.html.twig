<div class="col-md-3"></div>
<div class="col-md-6">
    <div class="panel panel-default ">
        <div class="panel-body">
            {{ form_start(reRunForm) }}
            <div class="col-lg-12">
                <h2>{{'fix.errors'|trans}}</h2>
                <p>
                    {{ 'fix.errors.description'|trans }}
                </p>
            </div>
            <div class="col-lg-12">
                <p>
                    {{ form_widget(reRunForm.batch) }}
                </p>
            </div>
            <div class="col-lg-12">
                <p>
                    {{ form_widget(reRunForm.send) }}
                </p>
            </div>
            <div class="col-lg-12">
                <p>
                    {% if successReRun is defined  and successReRun == true %}
                    <div class="alert alert-dismissible alert-success">
                        <strong>{{'success'|trans}}</strong> {{'success.description'|trans}}.
                    </div>
                {%endif%}
                </p>
            </div>
            {{ form_end(reRunForm) }}

            <h4>{{'batch.list'|trans}}</h4>
            <table class="table table-striped table-hover " id="table_batchs">
                <thead>
                    <tr>
                        <th>{{'date'|trans}}</th>
                        <th>{{'action'|trans}}</th>
                        <th>{{'state'|trans}}</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div class="col-md-3"></div>